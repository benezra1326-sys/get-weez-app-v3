{
  "name": "get-weez-optimized",
  "version": "1.0.0",
  "description": "Luxury concierge platform - Optimized version",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:report": "eslint . --ext .js,.jsx,.ts,.tsx --format json --output-file eslint-report.json",
    
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --ci",
    
    "analyze": "cross-env ANALYZE=true next build",
    "bundle-analyzer": "cross-env BUNDLE_ANALYZE=true next build",
    
    "type-check": "tsc --noEmit",
    
    "pre-commit": "lint-staged",
    "pre-push": "npm run lint && npm run test:ci && npm run type-check",
    
    "quality:check": "npm run lint && npm run format:check && npm run test:coverage && npm run type-check",
    "quality:fix": "npm run lint:fix && npm run format",
    
    "complexity": "plato -r -d complexity-report .",
    "security": "npm audit && snyk test",
    
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@next/bundle-analyzer": "^13.0.0",
    "eslint": "^8.45.0",
    "eslint-config-next": "^13.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "jest": "^29.6.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "cross-env": "^7.0.3",
    "plato": "^1.7.0",
    "bundlesize": "^0.18.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run quality:check"
    }
  },
  "bundlesize": [
    {
      "path": ".next/static/js/*.js",
      "maxSize": "250kb",
      "compression": "gzip"
    },
    {
      "path": ".next/static/css/*.css",
      "maxSize": "50kb",
      "compression": "gzip"
    }
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testPathIgnorePatterns": ["<rootDir>/.next/", "<rootDir>/node_modules/"],
    "collectCoverageFrom": [
      "components/**/*.{js,jsx}",
      "hooks/**/*.{js,jsx}",
      "contexts/**/*.{js,jsx}",
      "lib/**/*.{js,jsx}",
      "!**/*.test.{js,jsx}",
      "!**/*.spec.{js,jsx}",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}